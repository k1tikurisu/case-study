{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "includes": ["submissions/**/*.ts"]
}
